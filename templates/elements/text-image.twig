<div class="eds-text-image {{ content.alignment }} eds-padding--medium {{ content.spacing_bottom }}">
    <div class="eds-text-image__wrapper">
        <div class="eds-text-image__content eds-width--c5">
            <a class="eds-text-image__text-wrapper"  href="{{ generateLink(content.link) }}">

{#                <div class="eds-text-image__headline eds-headline-v2">#}
{#                    {{ content.headline|formatHeadline }}#}
{#                </div>#}

                <div class="eds-text-image__main-text eds-richtext">
                    {{ content.richtext|raw }}
                </div>
{#                <div class="eds-text-image__link">#}
{#                    <a class="eds-link" href="{{ generateLink(content.link) }}">#}
{#                        <span>{{ content.label }}</span>#}
{#                    </a>#}
{#                </div>#}
            </a>

        </div>
        <div class="eds-text-image__image">
                {{ content.image|optimizeImage([
                    {
                        'imageWidth': '420',
                        'mediaMinWidth': '320',
                        'aspect_ratio': '4x3',
                        'compression': '5'
                    },
                    {
                        'imageWidth': '920',
                        'mediaMinWidth': '700',
                        'aspect_ratio': '4x3',
                        'compression': '5'
                    },
                    {
                        'imageWidth': '1224',
                        'mediaMinWidth': '1024',
                        'aspect_ratio': '16x10',
                        'compression': '5'
                    },
                    {
                        'imageWidth': '1400',
                        'mediaMinWidth': '1224',
                        'aspect_ratio': '16x10',
                        'compression': '5'
                    }
                ]) }}

        </div>


    </div>
</div>